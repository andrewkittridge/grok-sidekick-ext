{
  "manifest_version": 3,
  "name": "Grok Sidekick",
  "version": "1.0",
  "description": "Browser extension for real-time Grok AI assistance on webpages.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "move-selection-to-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Move selected text to Grok Sidekick popup"
    }
  }
} 